#include "stm32f4xx.h"

#ifndef LCD_H_
#define LCD_H_


void lcdSetup(GPIO_TypeDef *PORT, uint16_t RS, uint16_t En, uint16_t D0,uint16_t D1,uint16_t D2,uint16_t D3,uint16_t D4,uint16_t D5,uint16_t D6,uint16_t D7);
void lcdEnable();
void lcdWrite(uint8_t data);
void lcdCommand(uint8_t command);
void lcdSendData(uint8_t message);
void lcdInit();
void lcd_send_string(char *string);
void writeNumber(char *format,uint32_t number);




#endif /* LCD_H_ */
