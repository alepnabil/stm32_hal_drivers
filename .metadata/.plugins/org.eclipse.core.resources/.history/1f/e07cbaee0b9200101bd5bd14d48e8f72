#include <stdint.h>
#include <stdio.h>
#include "stm32f4xx_hal.h"   // brings in HAL + GPIO_TypeDef
#include "stm32f4xx_hal_gpio.h"

#include "stm32f4xx_hal.h"


uint16_t icpin [3];


GPIO_TypeDef *IC_PORT;






// initialize function
void init_74hc(GPIO_TypeDef* GPIO_PORT, uint8_t SER, uint8_t RCLCK, uint8_t SRCLCK, uint8_t SRCLR)
{

	IC_PORT = GPIO_PORT;
	icpin[0] = SER;
	icpin[1] = RCLCK;
	icpin[2] = SRCLCK;
	icpin[3] = SRCLR;

}


// enable the shift register clock to FF
void en_shift_register_clck(GPIO_TypeDef* GPIO, uint16_t SRCLCK)
{
	HAL_GPIO_WritePin(GPIO,SRCLCK,GPIO_PIN_RESET);
	HAL_GPIO_WritePin(GPIO,SRCLCK,GPIO_PIN_SET);

}


void en_register_clock_output(GPIO_TypeDef* GPIO, uint16_t RCLCK)
{
	HAL_GPIO_WritePin(GPIO,RCLCK,GPIO_PIN_RESET);
	HAL_GPIO_WritePin(GPIO,RCLCK,GPIO_PIN_SET);
}


void en_clear_clock(GPIO_TypeDef* GPIO, uint16_t SRCLR)
{
	HAL_GPIO_WritePin(GPIO,SRCLR,GPIO_PIN_RESET);

}


void en_enable_output(GPIO_TypeDef* GPIO, uint16_t RCLCK)
{

}
















